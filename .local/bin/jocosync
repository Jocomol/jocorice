#!/bin/bash

ALL=1
c_flag=0
m_flag=0
t_flag=0
r_flag=0


while getopts 'cmtnr' flag; do
  case "${flag}" in
    c) c_flag=1 && ALL=0 ;;
    m) m_flag=1 && ALL=0 ;;
    t) t_flag=1 && ALL=0 ;;
    r) r_flag=1 ;;
  esac
done

if [ $c_flag -eq 1 ] || [ $ALL -eq 1 ] && command -v calcurse-caldav
then
	echo -----VDIRSYNCER-----
    vdirsyncer sync
fi

if [ $m_flag -eq 1 ] || [ $ALL -eq 1 ] && command -v mw
then
	echo -----MUTTWIZARD-----
  	mailsync
fi

if ( [ $t_flag -eq 1 ] || [ $ALL -eq 1 ] ) && [ $r_flag -ne 1 ] && command -v topgrade
then
	echo -----TOPGRADE-----
	echo "(LOCAL ONLY)"
  	topgrade --disable remotes
fi

if [ $r_flag -eq 1 ] && command -v topgrade
then
	echo -----TOPGRADE-----
	echo "(LOCAL & REMOTE)"
	topgrade
fi
